frr version 10.2-dev_git
frr defaults traditional
hostname c3
!
vrf mgmt
exit-vrf
!
interface c1
 description connect to clab-lab-c3->c1
 ip address 192.168.1.252/31
 ip router isis SRv6
 ipv6 router isis SRv6
 isis circuit-type level-1
 isis network point-to-point
 mpls enable
exit
!
interface lo
 description Loopback for clab-lab-c3
 ip address 10.10.10.3/32
 ip router isis SRv6
 ipv6 address 2001:db8::3/128
 ipv6 router isis SRv6
 isis circuit-type level-1
 mpls enable
exit
!
interface pe2
 description connect to clab-lab-c3->pe2
 ip address 192.168.1.251/31
 ip router isis SRv6
 ipv6 router isis SRv6
 isis circuit-type level-1
 isis network point-to-point
 mpls enable
exit
!
mpls ldp
 router-id 10.10.10.3
 !
 address-family ipv4
  discovery transport-address 10.10.10.3
  label local advertise explicit-null
  !
  interface c1
  exit
  !
  interface lo
  exit
  !
  interface pe2
  exit
  !
 exit-address-family
 !
exit
!
router isis SRv6
 is-type level-1
 net 49.0001.0001.0001.2003.00
 lsp-mtu 1300
 topology ipv6-unicast
 segment-routing on
 segment-routing node-msd 8
exit
!
